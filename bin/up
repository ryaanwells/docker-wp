#!/bin/bash

DIR=$(cd `dirname $0` && cd .. && pwd)

cd $DIR
git submodule update --init --recursive
# Ensure the SSL certificate is available before starting docker otherwise
# the volumes will fail to resolve.
./bin/generate_cert
docker-compose pull \
	&& docker-compose stop php && docker-compose rm -v --force php wpcli nginx \
	&& docker-compose up -d

# Update all plugins
./bin/wp --allow-root --url=betz.mx plugin update --all

# Update all themes
./bin/wp --allow-root --url=betz.mx theme update --all
cd -

